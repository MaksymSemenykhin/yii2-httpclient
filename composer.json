{
  "name": "MaksymSemenykhin/yii2-httpclient",
  "description": "Yii2 http client implementation based on Guzzle library",
  "type": "extension",
  "license": "GPL-v3",
  "support": {
    "issues": "https://github.com/MaksymSemenykhin/yii2-httpclient/issues",
    "source": "https://github.com/MaksymSemenykhin/yii2-httpclient"
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=5.4.0",
    "yiisoft/yii2": ">=2.0.0",
    "guzzlehttp/guzzle": "~6.1"
  },
  "require-dev": {
    "codeception/codeception": "~2.1",
    "codeception/verify": "~0.3",
    "codeception/specify": "~0.4"
  },
  "autoload": {
    "psr-4": {
      "MaksymSemenykhin\\httpclient\\": "src"
    }
  }
}
